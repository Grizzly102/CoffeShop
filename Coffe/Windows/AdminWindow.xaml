<Window x:Class="Coffeeshop.Windows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coffeeshop.Windows"
        mc:Ignorable="d"
        Title="" Background="GhostWhite" Height="350" Width="400" FontFamily="Century Gothic" FontSize="20" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Продукты" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <Button Content="Добавить продукт" Margin="0,0,0,20" Click="AddProd_ButtonClick" Background="White"/>
            <Button Content="Список продуктов" Margin="0,0,0,20" Background="White" Click="Button_Click"/>
            <Label Content="Сотрудники" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <Button Content="Добавить сотрудника" Click="AddEmplo_ButtonClick"  Background="White"/>
           
        </StackPanel>
    </Grid>
</Window>
